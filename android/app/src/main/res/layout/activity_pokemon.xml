<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PokemonActivity"
    android:theme="@android:style/Theme">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/simpleTableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"> <!-- stretch the second column of the layout-->


        <TableRow

            android:id="@+id/nameRow"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/name"
                android:layout_span="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#b0b0b0"
                android:layout_margin="0.5dp"
                android:text="Text 1"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="24dp"
                android:textStyle="bold"/>
        </TableRow>


        <TableRow

            android:id="@+id/imageRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- first element of the row-->
            <ImageView

                android:id="@+id/image"
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:background="#b0b0b0"
                android:padding="18dip"
                android:text="Text 1"
                android:layout_span="2"
                android:textColor="#000"
                android:layout_margin="0.5dp"
                android:textSize="24dp" />
        </TableRow>

        <!-- first row of the table layout-->
        <TableRow

            android:id="@+id/firstRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- first element of the row-->
            <TextView

                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#b0b0b0"
                android:layout_margin="0.5dp"
                android:text="Text 2"
                android:layout_span="1"

                android:gravity="center"
                android:textColor="#000"
                android:textSize="24dp" />

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/typeTableLayout"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_span="1"
                android:layout_margin="0.5dp"
                > <!-- stretch the second column of the layout-->


            <TableRow
                android:layout_width="fill_parent">
                <TextView

                    android:id="@+id/type1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFb0b0"

                    android:gravity="center"
                    android:text="Type 1"
                    android:textColor="#000"
                    android:textSize="24dp"
                  />
                <TextView

                    android:id="@+id/type2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#b0b0FF"

                    android:gravity="center"
                    android:text="Type 2"
                    android:textColor="#000"
                    android:textSize="24dp"
                   />

            </TableRow>
            </TableLayout>

        </TableRow>

        <!-- first row of the table layout-->
        <TableRow

            android:id="@+id/secondRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

                <!-- first element of the row-->
                <TextView

                    android:id="@+id/height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#b0b0b0"
                    android:layout_margin="0.5dp"
                    android:text="Text 1"

                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="24dp" />

                <TextView

                    android:id="@+id/weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0.5dp"
                    android:background="#b0b0b0"

                    android:gravity="center"
                    android:text="Text 2"
                    android:textColor="#000"
                    android:textSize="24dp" />

        </TableRow>

        <TableRow

            android:id="@+id/moveTableRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
        <pokedex.mike.pokedex.MovesTable
            android:id="@+id/MovesTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:layout_span="2"
            android:layout_margin="0.5dp"
            />



        </TableRow>


    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>